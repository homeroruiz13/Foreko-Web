# API Configuration
NEXT_PUBLIC_API_URL=https://www.foreko.app

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://www.foreko.app

# Stripe Configuration (LIVE KEYS - BE CAREFUL!)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgres://username:password@host.neon.tech/database?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (SMTP) - Configure these for email functionality
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM_NAME=Foreko
EMAIL_FROM_ADDRESS=your-email@gmail.com

# App URL (for email links) - UPDATE THIS TO YOUR PRODUCTION URL
NEXT_PUBLIC_APP_URL=https://www.foreko.app

# Optional: Cleanup API token (for scheduled cleanup)
CLEANUP_API_TOKEN=your-cleanup-api-token-here

# Neon Database Additional Variables (for reference)
PGHOST=your-neon-host
PGUSER=your-neon-user
POSTGRES_HOST=your-neon-host
POSTGRES_USER=your-neon-user
NEON_PROJECT_ID=your-neon-project-id

# Database URLs (alternative formats)
DATABASE_URL_UNPOOLED=postgresql://username:password@host.neon.tech/database?sslmode=require
POSTGRES_URL=postgres://username:password@host.neon.tech/database?sslmode=require
POSTGRES_PRISMA_URL=postgres://username:password@host.neon.tech/database?connect_timeout=15&sslmode=require

# Environment
NODE_ENV=production
